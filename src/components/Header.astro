    <!-- Menú para dispositivos más grandes -->
    <div class="hidden lg:flex gap-x-5 max-lg:space-y-3 max-lg:fixed max-lg:w-1/2 max-lg:min-w-[300px] max-lg:top-0 max-lg:left-0 max-lg:p-6 max-lg:h-full max-lg:shadow-md max-lg:overflow-auto z-50">
      <a href="/" class="text-white hover:opacity-100 opacity-70 transition-opacity duration-300 block">
        Home</a>
      <a href="/menu" class="text-white hover:opacity-100 opacity-70 transition-opacity duration-300 block">
