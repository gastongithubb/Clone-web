<header id="header-nav" class="fixed flex shadow-md py-4 px-4 sm:px-10 font-[sans-serif] min-h-[70px] w-full tracking-wide z-50">
  <div class="flex flex-wrap items-center justify-between gap-5 w-full">
    <a href="/"><img src="text-logo.svg" alt="logo" class="w-36 invert" /></a>

    <!-- Menú para tablet y dispositivos más pequeños -->
    <div class="btn-group p-3 bd-example m-0 border-0 lg:hidden position-static">
      <button id="toggleMenu" type="button" class="btn btn-secondary dropdown-toggle border-black bg-black" aria-expanded="false">
        Menu
      </button>
      <ul id="menuList" class="dropdown-menu dropdown-menu-end d-none" style="">
        <li><button class="dropdown-item" type="button"><a href="/">Home</a></button></li>
        <li><button class="dropdown-item" type="button"><a href="/menu">Menu</a></button></li>
        <li><button class="dropdown-item" type="button"><a href="/cafe">Cafe</a></button></li>
        <li><button class="dropdown-item" type="button"><a href="/experience">Experience</a></button></li>
        <li><button class="dropdown-item" type="button"><a href="/about">About</a></button></li>
      </ul>
